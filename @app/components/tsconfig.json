{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noUnusedLocals": false, // default false, i changed it from true -> false
    "noUnusedParameters": false, // default false, i changed it from true -> false
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declarationDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",
    "module": "commonjs",
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../graphql"
    },
    {
      "path": "../lib"
    }
  ]
}
